datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Creating a model for different users to have portfolios on the site
model Profile {

  // Unique ID to avoid collision
  id String @id @default(cuid())

  // User name
  name String

  //Age
  age Int

  //Location
  location String

  //Profession or University role
  role String

  //Profession or University location
  place String
  
  // User email
  email String

  // Time account was made
  createdAt DateTime @default(now())

  // Time account was updated
  updatedAt DateTime @updatedAt

  // Aboutme section of portfolio
  aboutme String

}

